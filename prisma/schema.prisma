generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Posto {
  idPosto  String  @id @default(uuid())
  cnpj     String  @unique
  endereco String
  nome     String
  imgBg    String?

  tipos_combustiveis Tipo_combustivel[]

  abastece Posto_Abastecer_Cliente[]



  gerente   Gerente @relation(fields: [gerenteId], references: [idGerente])
  gerenteId String  @unique

  @@map("postos")
}

model Tipo_combustivel {
  idTipo String @id @default(uuid())
  nome   String @unique
  valor  Float



  posto        Posto?  @relation(fields: [postoIdPosto], references: [idPosto])
  postoIdPosto String?

  @@map("tipos_de_combustiveis")
}

model Gerente {
  idGerente String @id @default(uuid())
  cpf       String @unique
  login     String @unique
  senha     String
  nome      String
  email     String @unique


  posto Posto?
  @@map("gerentes")
}

model Cliente {
  idCliente String @id @default(uuid())
  cpf       String @unique
  nome      String

  abastecido Posto_Abastecer_Cliente[]

  @@map("clientes")
}

model Posto_Abastecer_Cliente {
  posto     Posto    @relation(fields: [postoId], references: [idPosto])
  postoId   String
  cliente   Cliente  @relation(fields: [clienteId], references: [idCliente])
  clienteId String
  valor     Float
  data      DateTime


  @@id([postoId, clienteId])
  @@map("postos_abastecem_clientes")
}
